                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            const notificationElement = document.getElementById('notification');
                            const messageElement = document.getElementById('notification-message');
                            const closeBtn = document.getElementById('notification-close');

                            // Flash message from server-side rendered into the template
                            const successMessage = "{{successMessages}}";
                            const errorMessage = "{{errorMessages}}";

                            console.log(successMessage, errorMessage);  // Check if messages are being received

                            // Show notification if flash message exists
                            if (successMessage && successMessage.trim() !== '') {
                                messageElement.textContent = successMessage;
                                notificationElement.classList.remove('hidden');
                            } else if (errorMessage && errorMessage.trim() !== '') {
                                messageElement.textContent = errorMessage;
                                notificationElement.classList.remove('hidden');
                                notificationElement.classList.add('error');
                            }

                            // Close notification when close button is clicked
                            closeBtn.addEventListener('click', function () {
                                notificationElement.classList.add('hidden');
                            });

                            // Optionally, auto-hide the notification after a few seconds
                            setTimeout(() => {
                                notificationElement.classList.add('hidden');
                            }, 6000); // Hide after 5 seconds
                        });
                    </script>

