                        const couponCode = currentHiddenText.textContent.trim();

                        // Make an AJAX call to check if the coupon can be used and deduct coins if possible
                        try {
                            const response = await fetch('/useCoupon', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ couponCode })
                            });

                            const data = await response.json();

                            if (response.ok) {
                                // Success: Reveal the hidden text and change button text
                                currentHiddenText.style.display = 'block';
                                buttons[i].textContent = 'Click to Hide Text';
                                alert(data.message); // Optional: show a success message
                                window.location.href = '/account';
                            } else {
                                // Error: Display the error message

                                window.location.href = '/account'; // Redirect to account page to display the error message
                            }
                        } catch (err) {
                            console.error('Failed to save coupon:', err);
                        }
                    });
                }
            });





